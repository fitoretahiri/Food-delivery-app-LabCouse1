@model IEnumerable<FoodApp.Models.Category>

<div class="container p-3">
    <div class="row-pt-4">
        <div class="col-6">
            <h2 class="text-primary">Menu List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">Create new Menu</a>
        </div>
    </div>

    <br/><br/>

    @if (Model.Count() > 0) { 
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Menu name
            </th>
            <th>
                Menu Description
            </th>
            <th>
                Menu picture
            </th>
            <th>
                Menu price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
                {
        <tr>
            <td width="50%">@obj.emri</td>
            <td width="30%">@obj.mbiemri</td>
            <td width="10%">@obj.photoProfile</td>
            <td>@obj.roli</td>
            <td class="text-center">
                <div class="w-10 btn-group" role="group">
                    <a asp-controller="User" asp-route-Id="@obj.userID" asp-action="Edit" class="btn btn-primary">Edit</a>
                    <a asp-controller="User" asp-route-Id="@obj.userID" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>

                </div>
            </td>
        </tr>
                }
    </tbody>

</table>
    }
            else
            {
                <p>No Menu Exists.</p>
            }

</div> 

